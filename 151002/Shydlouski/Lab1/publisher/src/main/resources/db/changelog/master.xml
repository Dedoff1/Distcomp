<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="admin">
        <createTable tableName="tbl_editor">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- New ChangeSet for tbl_tweet -->
    <changeSet id="1" author="admin">
        <createTable tableName="tbl_tweet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="editor_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="content" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Add Foreign Key Constraint -->
    <changeSet id="addForeignKeyConstraint" author="admin">
        <addForeignKeyConstraint baseTableName="tbl_tweet" baseColumnNames="editor_id"
                                 constraintName="FK_tbl_tweet_editor" referencedTableName="tbl_editor"
                                 referencedColumnNames="id"/>
    </changeSet>


    <!-- New ChangeSet for tbl_note + adding a FK between tables-->
    <changeSet id="2" author="admin">
        <createTable tableName="tbl_note">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tweet" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="tbl_note" baseColumnNames="tweet"
                                 constraintName="FK_tbl_note_tweet" referencedTableName="tbl_tweet"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="createTable-tbl_tag" author="admin">
        <createTable tableName="tbl_tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createTable-tbl_m2m_tweet_tag" author="admin">
        <createTable tableName="tbl_m2m_tweet_tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tweet_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tg_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="addForeignKeyConstraints-m2m" author="admin">
        <addForeignKeyConstraint baseTableName="tbl_m2m_tweet_tag" baseColumnNames="tweet_id"
                                 constraintName="FK_tbl_m2m_tweet_tag_tweet" referencedTableName="tbl_tweet"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="tbl_m2m_tweet_tag" baseColumnNames="tg_id"
                                 constraintName="FK_tbl_m2m_tweet_tag_tag" referencedTableName="tbl_tag"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>