<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-user" author="melekit">
        <createTable tableName="tbl_user">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="login" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-table-tweet" author="melekit">
        <createTable tableName="tbl_tweet">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="int">
                <constraints foreignKeyName="tweet_user_id" references="tbl_user(id)"/>
            </column>
            <column name="title" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="content" type="varchar(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="modified" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-table-note" author="melekit">
        <createTable tableName="tbl_note">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="tweet_id" type="int">
                <constraints foreignKeyName="note_tweet_id" references="tbl_tweet(id)"/>
            </column>
            <column name="content" type="varchar(2048)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-table-marker" author="melekit">
        <createTable tableName="tbl_marker">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(32)">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>
    <changeSet id="create-table-tweet_marker" author="melekit">
        <createTable tableName="tbl_tweet_marker">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="tweet_id" type="int">
                <constraints foreignKeyName="tweet_marker_id" references="tbl_tweet(id)"/>
            </column>
            <column name="marker_id" type="int">
                <constraints foreignKeyName="marker_tweet_id" references="tbl_marker(id)"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>

