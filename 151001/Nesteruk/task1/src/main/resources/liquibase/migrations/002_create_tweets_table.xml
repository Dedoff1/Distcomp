<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="003_create_tweets_table" author="Diana Harlap">
        <createSequence schemaName="distcomp" sequenceName="tweets_seq"/>

        <createTable schemaName="distcomp" tableName="tbl_tweet">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('distcomp.tweets_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="content" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_author_id" references="distcomp.tbl_author(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>